<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="AppSpinnerTheme" parent="Theme.AppCompat.Light">
        <!-- Customize Spinner Comment here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textSize">@dimen/_12sp</item>
    </style>

    <style name="AppDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorRed</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="InputLabel" parent="TextAppearance.AppCompat.Caption">
        <item name="android:paddingBottom">@dimen/input_label_vertical_spacing</item>
        <item name="android:paddingLeft">@dimen/input_label_horizontal_spacing</item>
        <item name="android:paddingRight">@dimen/input_label_horizontal_spacing</item>
    </style>

    <style name="Title">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColor">@color/gray_747575</item>
        <item name="colorControlNormal">@color/gray_747575</item>
        <item name="colorControlActivated">@color/colorSkyBlue</item>
        <item name="colorControlHighlight">@color/colorSkyBlue</item>
        <item name="colorSwitchThumbNormal">@color/colorSkyBlue</item>
    </style>
    <style name="FieldLabel" parent="">
        <item name="android:textColor">#4a4a4a</item>
        <!--<item name="android:layout_margin">4dp</item>-->
    </style>

    <style name="InputMaterialEditText">
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InputSpinner">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
